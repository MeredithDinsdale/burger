<div class="container">
<h1>Burgers!</h1>

<h3>Add a burger that you would loooove to eat:</h3>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>
<br><br>
<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h2>Ready to Eat Burgers</h2>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        <h2>Already Devoured Burgers</h2>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

</div>
